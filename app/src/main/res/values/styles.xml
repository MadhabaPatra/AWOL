<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="dropdownColor">@android:color/black</item>
        <item name="aboutTextColor">@color/textColorDark</item>
        <item name="logoo">@drawable/codex_l</item>
        <item name="windowColor">@color/lightBackground</item>
        <item name="toolbarTitle">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarColor">@android:color/white</item>
        <item name="menuIconTint">@color/colorPrimary</item>

    </style>

    <style name="splash_screen" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/colorwhite</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Dark application theme. -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="dropdownColor">@android:color/white</item>
        <item name="menuIconTint">@color/colorPrimary</item>
        <item name="logoo">@drawable/codex</item>
        <item name="aboutTextColor">@color/colorwhite</item>
        <item name="windowColor">@color/darkBackground</item>
        <item name="toolbarColor">@color/darkColorPrimary</item>
        <item name="toolbarTitle">@android:color/white</item>
        <item name="colorPrimary">@color/darkColorAccent</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.AppBarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_x_large</item>
        <item name="android:textColor">@color/colorwhite</item>
    </style>

    <style name="PreferencesTheme">
        <item name="android:background">#FFEAEAEA</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat" />


    <style name="AppTheme.NoActionBar.Orange">
        <item name="menuIconTint">@android:color/white</item>
        <item name="colorPrimaryDark">@color/orangeDark</item>
        <item name="toolbarColor">@color/orange</item>
        <item name="toolbarTitle">@android:color/white</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar.Orange">
        <item name="menuIconTint">@android:color/white</item>
        <item name="toolbarColor">@color/orange</item>
        <item name="colorPrimaryDark">@color/orangeDark</item>
    </style>

    <style name="AppTheme.NoActionBar.Red">
        <item name="menuIconTint">@android:color/white</item>
        <item name="colorPrimaryDark">@color/redDark</item>
        <item name="toolbarColor">@color/red</item>
        <item name="toolbarTitle">@android:color/white</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar.Red">
        <item name="menuIconTint">@android:color/white</item>
        <item name="colorPrimaryDark">@color/redDark</item>
        <item name="toolbarColor">@color/red</item>
        <item name="toolbarTitle">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.Blue">
        <item name="menuIconTint">@android:color/white</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="toolbarColor">@color/blue</item>
        <item name="toolbarTitle">@android:color/white</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar.Blue">
        <item name="menuIconTint">@android:color/white</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="toolbarColor">@color/blue</item>
        <item name="toolbarTitle">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.Green">
        <item name="menuIconTint">@android:color/white</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
        <item name="toolbarColor">@color/green</item>
        <item name="toolbarTitle">@android:color/white</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar.Green">
        <item name="menuIconTint">@android:color/white</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
        <item name="toolbarColor">@color/green</item>
        <item name="toolbarTitle">@android:color/white</item>
    </style>
</resources>